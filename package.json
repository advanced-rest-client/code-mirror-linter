{
  "name": "@advanced-rest-client/code-mirror-linter",
  "description": "A source files for code mirror linter files",
  "version": "3.0.0",
  "license": "Apache-2.0",
  "main": "code-mirror-linter.js",
  "keywords": [
    "web-components",
    "code-mirror",
    "linter"
  ],
  "authors": [
    "Pawel Psztyc",
    "The Advanced REST client authors <arc@mulesoft.com>"
  ],
  "contributors": [
    "Pawel Psztyc",
    "The Advanced REST client authors <arc@mulesoft.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/advanced-rest-client/code-mirror-linter.git"
  },
  "bugs": {
    "url": "https://github.com/advanced-rest-client/code-mirror-linter/issues",
    "email": "arc@mulesoft.com"
  },
  "dependencies": {
    "codemirror": "^5.48.4",
    "jsonlint": "^1.6.3",
    "lit-element": "^2.2.1"
  },
  "devDependencies": {
    "@advanced-rest-client/eslint-config": "^1.1.2",
    "@advanced-rest-client/prettier-config": "^0.1.0",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^7.0.0",
    "@polymer/gen-typescript-declarations": "^1.6.2",
    "husky": "^1.0.0",
    "lint-staged": "^8.0.0"
  },
  "scripts": {
    "test": "exit 0",
    "update-types": "gen-typescript-declarations --deleteExisting --outDir .",
    "start": "exit 0",
    "start:compatibility": "exit 0",
    "lint:eslint": "eslint --ext .js,.html .",
    "format:eslint": "eslint --ext .js,.html . --fix",
    "lint:prettier": "prettier \"**/*.js\" --list-different || (echo '↑↑ these files are not prettier formatted ↑↑' && exit 1)",
    "format:prettier": "prettier \"**/*.js\" --write",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "test:watch": "exit 0",
    "test:legacy": "exit 0",
    "test:legacy:watch": "exit 0",
    "test:sl": "exit 0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
